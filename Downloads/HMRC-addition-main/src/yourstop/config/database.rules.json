{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        ".validate": "newData.hasChildren(['email', 'displayName', 'createdAt'])"
      }
    },
    "bookings": {
      "$bookingId": {
        ".read": "auth != null && (data.child('userId').val() === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        ".write": "auth != null && (data.child('userId').val() === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        ".validate": "newData.hasChildren(['restaurantId', 'userId', 'partySize', 'dateTime', 'status'])"
      }
    },
    "restaurants": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
      "$restaurantId": {
        "reviews": {
          "$reviewId": {
            ".read": "auth != null",
            ".write": "auth != null && (data.child('userId').val() === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
            ".validate": "newData.hasChildren(['userId', 'rating', 'comment', 'createdAt'])"
          }
        },
        "availability": {
          ".read": "auth != null",
          ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
        }
      }
    },
    "notifications": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "$notificationId": {
          ".validate": "newData.hasChildren(['title', 'message', 'type', 'createdAt', 'read'])"
        }
      }
    },
    "admin": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    }
  }
}
